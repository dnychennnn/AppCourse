<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.denny.appcourse_hw2_4102056034.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Computer:"
                android:id="@+id/textView" />

            <EditText
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_comp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You: "
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_you" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

        <EditText
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_outcome"
            android:layout_weight="0.31"
            android:hint="OUTCOME" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="131dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="paper"
                android:id="@+id/button_paper" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="scizzors"
                android:id="@+id/button_scizzors" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Rock"
                android:id="@+id/button_rock" />
        </LinearLayout>

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_end"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/btn_star_big_on"
            android:backgroundTintMode="screen" />

    </LinearLayout>
</RelativeLayout>
